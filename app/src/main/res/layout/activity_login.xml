<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="#ffccfffd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Househunting"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8"

        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Search For a house"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Made"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="easier and faster"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here To Sign_up"
        android:id="@+id/signup"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:background="#ffff5f65" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardElevation="@dimen/cardview_default_radius"
        android:layout_below="@+id/signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/view">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="#ff6bff61">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Login"
            android:textColor="#ffffff"
            android:layout_marginLeft="140dp"
            android:id="@+id/textView11"
            android:layout_alignTop="@+id/view"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/username1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="username:"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="30"

                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:hint="please enter your username"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/password1"
            android:layout_alignBottom="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:textColor="#ffffff"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="password:"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:hint="please enter your password"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:id="@+id/conpassword1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#ffffff"

                android:text="confirm password:"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:hint="please confirm your password"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/view"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:id="@+id/send"
            android:layout_gravity="right" />

        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>